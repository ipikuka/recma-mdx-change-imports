{
  "name": "recma-mdx-change-imports",
  "version": "1.2.2",
  "description": "It is a recma plugin which converts import declarations for assets and media with relative links into variable declarations with string URLs in the compiled MDX source",
  "type": "module",
  "exports": "./dist/esm/index.js",
  "main": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "scripts": {
    "build": "rimraf dist && tsc --build && type-coverage",
    "format": "npm run prettier && npm run lint",
    "prettier": "prettier --write .",
    "lint": "eslint .",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --config ./jest.config.cjs --coverage",
    "test:serialize": "NODE_OPTIONS=--experimental-vm-modules jest --config ./jest.config.cjs serialize.spec.ts",
    "test:complie": "NODE_OPTIONS=--experimental-vm-modules jest --config ./jest.config.cjs compile.spec.ts",
    "test:raw": "NODE_OPTIONS=--experimental-vm-modules jest --config ./jest.config.cjs raw.spec.ts",
    "test:resolve": "NODE_OPTIONS=--experimental-vm-modules jest --config ./jest.config.cjs resolve-path.spec.ts",
    "test:relative": "NODE_OPTIONS=--experimental-vm-modules jest --config ./jest.config.cjs relative-path.spec.ts",
    "prepack": "npm run build",
    "prepublishOnly": "npm test && npm run format"
  },
  "files": [
    "dist/",
    "src/",
    "LICENSE",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ipikuka/recma-mdx-change-imports.git"
  },
  "keywords": [
    "unified",
    "estree",
    "esast",
    "mdx",
    "mdxjs",
    "plugin",
    "recma",
    "recma plugin",
    "recma mdx",
    "import image",
    "import media",
    "recma mdx import media"
  ],
  "author": "ipikuka <talatkuyuk@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/ipikuka/recma-mdx-change-imports#readme",
  "bugs": {
    "url": "https://github.com/ipikuka/recma-mdx-change-imports/issues"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@mdx-js/mdx": "^3.1.1",
    "@types/dedent": "^0.7.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "dedent": "^1.7.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jest": "^29.1.0",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.2.0",
    "next-mdx-remote-client": "^2.1.7",
    "prettier": "^3.6.2",
    "recma-mdx-import-media": "^1.2.1",
    "rehype-mdx-import-media": "^1.2.0",
    "rehype-raw": "^7.0.0",
    "rimraf": "^6.1.0",
    "ts-jest": "^29.4.5",
    "type-coverage": "^2.29.7",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.4",
    "unified": "^11.0.5"
  },
  "dependencies": {
    "@types/estree": "^1.0.8",
    "estree-util-visit": "^2.0.0"
  },
  "peerDependencies": {
    "unified": "^11"
  },
  "sideEffects": false,
  "typeCoverage": {
    "atLeast": 100,
    "detail": true,
    "ignoreAsAssertion": true,
    "ignoreNonNullAssertion": true,
    "strict": true
  }
}
